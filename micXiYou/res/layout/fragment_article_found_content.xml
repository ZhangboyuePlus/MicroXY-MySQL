<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android" 
    style="@style/formalScrlFrgt" >
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        
	        <TextView android:id="@+id/txtvAtcFdTitleOfContent" 
	            style="@style/formalText"
	            android:textSize="20sp"
	            android:layout_centerInParent="true"/>
		</RelativeLayout>
		
	    <View style="@style/formalLine.h2"
	        android:layout_marginTop="3dip"/>
	    
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        
	        <TextView android:id="@+id/txtvAtcFdPublisherOfContent"
	            style="@style/formalText"
	            android:textSize="15sp"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"/>
	        
	        <TextView android:id="@+id/txtvAtcFdTimeOfContent"
	            style="@style/formalText"
	            android:textSize="15sp"
	            android:layout_marginRight="15dip"
	            android:layout_toLeftOf="@+id/txtvAtcFdStateOfContent"
	            android:layout_centerVertical="true"/>
	        
	        <TextView android:id="@+id/txtvAtcFdStateOfContent"
	            style="@style/formalText"
	            android:textSize="15sp"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"/>
	    </RelativeLayout>
	
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        
	        <TextView android:id="@+id/txtvAtcFdTelePhNumOfContent"
	            style="@style/formalText"
	            android:textSize="15sp"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true" />
		</RelativeLayout>
		
	    <View style="@style/formalLine.h1"
	        android:layout_marginBottom="5dip" />
	    
	    <TextView android:id="@+id/txtvAtcFdContent"
	        style="@style/formalText"
	        android:textSize="18sp" />
		
	    <View style="@style/formalLine.h1"
	        android:layout_marginTop="5dip"
	        android:layout_marginBottom="5dip"/>
	    	    
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="50dip" >
	        
		    <TextView android:id="@+id/txtvConfirmToDeal"
		        style="@style/formButton"
		        android:layout_centerInParent="true"
		        android:visibility="invisible"/> 
	    </RelativeLayout>
	</LinearLayout>
</ScrollView>