<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lnltMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <FrameLayout android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

	    <fragment 
	        android:id="@+id/fragment_home"
	        android:layout_height="match_parent"
	        android:layout_width="match_parent"
	        class="com.UI.micxiyou.HomeActivity"
	        />
	    
	    <fragment 
	        android:id="@+id/fragment_news"
	        android:layout_height="match_parent"
	        android:layout_width="match_parent"
	        class="com.UI.micxiyou.NewsActivity"
	        />
	    
	    <fragment
	        android:id="@+id/fragment_xy_food"
	        android:layout_height="match_parent"
	        android:layout_width="match_parent"
	        class="com.UI.micxiyou.XYFoodActivity" 
	        />
	    
	    <fragment
	        android:id="@+id/fragment_my_info"
	        android:layout_height="match_parent"
	        android:layout_width="match_parent"
	        class="com.UI.micxiyou.MyInfoActivity"
	        />
        
    </FrameLayout>
    
    <com.UI.Indicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="17"
        />
    
</LinearLayout>
